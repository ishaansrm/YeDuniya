<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <!--TODO Image is scaling instead of cropping because
            its in background. ScaleType only applies to src, not background-->
            <ImageView
                android:id="@+id/restaurant_hero"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/scrim"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_alignParentBottom="true"
                    android:id="@+id/loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rohini, Delhi"
                    android:textColor="#fff" />

                <TextView
                    android:layout_above="@id/loc"
                    android:id="@+id/rest_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Big Yellow Door"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:transitionName="restaurantName" />
            </RelativeLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/cuisines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast Food, Italian, Cafe" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cuisines"
                android:text="â‚¹ 500 for two" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/distance"
                android:src="@drawable/ic_maps_directions" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="2dp"
                android:text="1.4 Km" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>